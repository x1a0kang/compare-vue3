{
	"easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/home/home",
			"style": {
				"navigationBarTitleText": "",
				"navigationBarTextStyle": "white",
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/product/product",
			"style": {
				"navigationBarTitleText": "",
				"navigationBarTextStyle": "white",
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/compare/compare",
			"style": {
				"navigationBarTitleText": "详细参数对比"
			}
		},
		{
			"path": "pages/compare/compareList",
			"style": {
				"navigationBarTitleText": "",
				"navigationBarTextStyle": "white",
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/product/productDetail",
			"style": {
				"navigationBarTitleText": "详情"
			}
		},
		{
			"path": "pages/search/search",
			"style": {
				"navigationBarTitleText": "搜索"
			}
		},
		{
			"path": "pages/categories/categories",
			"style": {
				"navigationBarTitleText": "全部分类"
			}
		},
		{
			"path": "pages/hotRankAll/hotRankAll",
			"style": {
				"navigationBarTitleText": "热门跑鞋"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarBackgroundColor": "#ffffff",
		"backgroundColor": "#ffffff"
	},
	"tabBar": {
		"color": "#707070",
		"selectedColor": "#000",
		"fontSize": "12px",
		"backgroundColor": "#ffffff",
		"list": [{
				"pagePath": "pages/home/home",
				"text": "主页",
				"iconPath": "/static/home.png",
				"selectedIconPath": "/static/s_home.png"
			},
			{
				"pagePath": "pages/product/product",
				"text": "鞋库",
				"iconPath": "/static/commodity.png",
				"selectedIconPath": "/static/s_commodity.png"
			},
			{
				"pagePath": "pages/compare/compareList",
				"text": "对比",
				"iconPath": "/static/versus.png",
				"selectedIconPath": "/static/s_versus.png"
			}
		]
	},
	"uniIdRouter": {},
	"lazyCodeLoading": "requiredComponents"
}